{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"module": "es6",
		"target": "es5",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"jsx": "react", 
		"baseUrl": ".",
		"paths": {
			"*": ["src/*"],
			"src/*": ["src/*"]
		},
		"lib": [
			"dom",
			"es2015",
			"esnext"
		]
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}